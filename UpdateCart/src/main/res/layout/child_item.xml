<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20sp"
    android:orientation="horizontal"
    android:paddingLeft="20sp">

    <CheckBox
        android:id="@+id/goods_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/goods_iamge"
        android:layout_width="100sp"
        android:layout_height="130sp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品标题" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商品价格"
                android:textColor="#ff0000" />

            <com.project.zhengpengfei20180306.customview.AmountView
                android:id="@+id/add_down"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                app:btnTextSize="14sp"
                app:btnWidth="30dp"
                app:tvWidth="40dp"></com.project.zhengpengfei20180306.customview.AmountView>

            <Button
                android:id="@+id/delete"
                android:layout_width="50sp"
                android:layout_height="40sp"
                android:background="@null"
                android:text="删除" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>